@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;800&family=JetBrains+Mono:wght@400;500&display=swap');

:root {
    --bg-base: #03010c;
    --bg-panel: rgba(8, 6, 20, 0.85);
    --bg-panel-alt: rgba(7, 4, 25, 0.85);
    --bg-secondary: rgba(10, 15, 31, 0.92);
    --text-primary: #f5f6ff;
    --text-secondary: #b9c3ff;
    --muted: #8f96b8;
    --accent-primary: #7c5cfc;
    --accent-secondary: #5de6ff;
    --accent-tertiary: #ff7ad9;
    --accent-quaternary: #3ddcff;
    --border-soft: rgba(255, 255, 255, 0.08);
    --border-strong: rgba(255, 255, 255, 0.16);
    --panel-shadow: 0 24px 60px rgba(3, 0, 20, 0.55);
    --button-shadow: 0 18px 32px rgba(124, 92, 252, 0.35);
    --aurora-gradient: linear-gradient(135deg, #7c5cfc 0%, #5de6ff 50%, #ff7ad9 100%);
    --glass-bg: rgba(4, 6, 18, 0.85);
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    background: radial-gradient(circle at top left, rgba(124, 92, 252, 0.22), transparent 45%),
                radial-gradient(circle at bottom right, rgba(61, 220, 255, 0.18), transparent 40%),
                var(--bg-base);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
    padding: 0 16px 48px;
}

.body-gradient {
    position: fixed;
    inset: 0;
    z-index: -2;
    background: radial-gradient(circle at 20% 20%, rgba(157, 97, 255, 0.35), transparent 45%),
                radial-gradient(circle at 80% 15%, rgba(69, 221, 255, 0.3), transparent 40%),
                radial-gradient(circle at 50% 80%, rgba(255, 110, 180, 0.25), transparent 35%);
    filter: blur(60px);
}

.floating-shape {
    position: fixed;
    border-radius: 50%;
    pointer-events: none;
    z-index: -1;
    background: radial-gradient(circle at center, rgba(124, 92, 252, 0.15), transparent 70%);
    filter: blur(40px);
    animation: floatShape 16s ease-in-out infinite;
}

.shape1 { width: 280px; height: 280px; top: 5%; left: 8%; }
.shape2 { width: 220px; height: 220px; top: 65%; left: 10%; animation-delay: 4s; }
.shape3 { width: 320px; height: 320px; top: 20%; right: 4%; animation-delay: 8s; }

@keyframes floatShape {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
}

.container {
    width: min(1180px, 100%);
    margin: 48px auto;
    padding: 48px;
    border-radius: 28px;
    background: var(--glass-bg);
    border: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: var(--panel-shadow);
    position: relative;
    overflow: hidden;
}

.container::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--aurora-gradient);
    opacity: 0.35;
    filter: blur(60px);
    z-index: -1;
}

header {
    margin-bottom: 40px;
}

.top-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 32px;
}

.brand-mark {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    letter-spacing: 0.04em;
}

.brand-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--aurora-gradient);
    box-shadow: 0 0 16px rgba(124, 92, 252, 0.7);
}

.brand-name {
    color: var(--text-primary);
    text-transform: uppercase;
    font-size: 1rem;
}

.nav-links {
    display: flex;
    gap: 16px;
}

.nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 999px;
    border: 1px solid transparent;
    transition: all 0.2s ease;
    font-size: 0.95rem;
}

.nav-link:hover {
    border-color: rgba(148, 163, 255, 0.35);
    color: var(--text-primary);
}

.hero {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 24px;
    justify-content: space-between;
}

.hero-copy {
    flex: 1 1 460px;
}

.hero-title {
    font-size: clamp(2.05rem, 4vw, 3rem);
    line-height: 1.15;
    margin-bottom: 12px;
}

.hero-subtitle {
    color: var(--text-secondary);
    max-width: 540px;
    margin: 0;
}

.hero-badge {
    display: flex;
    flex-direction: column;
    gap: 6px;
    padding: 16px 20px;
    border-radius: 18px;
    border: 1px solid rgba(124, 92, 252, 0.35);
    background: rgba(124, 92, 252, 0.12);
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
}

.live-workbench {
    display: flex;
    flex-direction: column;
    gap: 28px;
}

.editor-container,
.live-editor-grid {
    display: grid;
    grid-template-columns: minmax(0, 3fr) minmax(0, 2fr);
    gap: 32px;
    align-items: start;
}

@media (max-width: 1023px) {
    .editor-container,
    .live-editor-grid {
        grid-template-columns: 1fr;
    }
}

.editor-column {
    display: flex;
    flex-direction: column;
}

.editor-column .code-area {
    min-height: 320px;
}

#live-dashboard {
    border-radius: 28px;
    padding: 18px;
    background: rgba(8, 10, 25, 0.45);
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(18px);
}

.dashboard-column {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.dashboard-card {
    padding: 22px 26px;
    border-radius: 22px;
    background: rgba(11, 14, 32, 0.65);
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 18px 42px rgba(3, 0, 20, 0.55);
    backdrop-filter: blur(24px);
}

.card-label {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-secondary);
}

.health-score-value {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.05;
    margin: 18px 0 6px;
    color: var(--accent-secondary);
}

.card-caption {
    color: var(--muted);
    font-size: 0.85rem;
}

.stats-list {
    list-style: none;
    margin: 16px 0 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.stats-list li {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.95rem;
    color: var(--text-secondary);
}

.stats-list strong {
    font-size: 1.1rem;
    color: var(--text-primary);
}

.panel-controls {
    padding: 20px 32px;
}

.panel-controls .button-row {
    margin: 0;
}

.panel {
    background: var(--bg-panel);
    border-radius: 24px;
    padding: 32px;
    border: 1px solid var(--border-soft);
    box-shadow: var(--panel-shadow);
    position: relative;
}

.panel::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.02);
    pointer-events: none;
}

.panel-title {
    font-size: 1.35rem;
    margin-bottom: 6px;
}

.panel-subtitle {
    margin: 0 0 20px;
    color: var(--text-secondary);
}

.panel-input .code-container,
.panel-input .trace-shell {
    border-radius: 18px;
    border: 1px solid rgba(148, 163, 255, 0.18);
    background: rgba(6, 10, 25, 0.65);
}

.input-label {
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 8px;
    display: block;
}

.input-label.subtle {
    margin-top: 24px;
    color: rgba(185, 195, 255, 0.65);
}

.code-area,
.trace-area {
    width: 100%;
    min-height: 200px;
    border: none;
    background: transparent;
    color: var(--text-primary);
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 0.95rem;
    padding: 20px 24px;
    resize: vertical;
}

.trace-area {
    min-height: 120px;
}

.code-area:focus,
.trace-area:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(124, 92, 252, 0.35);
}

.helper-text {
    font-size: 0.9rem;
    color: var(--muted);
    margin: 12px 0 20px;
}

.helper-text.subtle {
    margin-top: 8px;
    color: rgba(185, 195, 255, 0.55);
}

.button-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 18px;
    margin: 20px 0;
}

.cyber-button {
    position: relative;
    padding: 14px 32px;
    border-radius: 999px;
    border: none;
    font-weight: 600;
    color: #050312;
    background: var(--aurora-gradient);
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: var(--button-shadow);
}

.cyber-button:hover {
    transform: translateY(-2px);
}

.cyber-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.primary-action {
    font-size: 1.05rem;
}

.secondary-action {
    background: rgba(255, 255, 255, 0.08);
    color: var(--text-primary);
}

#loader {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 3px solid rgba(255, 255, 255, 0.18);
    border-top-color: var(--accent-secondary);
    animation: spin 0.85s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.panel-highlights {
    list-style: none;
    margin: 18px 0 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 12px;
}

.panel-highlights li {
    background: rgba(124, 92, 252, 0.12);
    border: 1px solid rgba(124, 92, 252, 0.25);
    border-radius: 16px;
    padding: 12px 14px;
    font-size: 0.9rem;
    color: var(--text-secondary);
}

.architect-upload {
    margin-top: 28px;
    padding-top: 18px;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
}

.upload-controls {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin: 12px 0;
}

.upload-input {
    flex: 1;
    min-width: 220px;
    padding: 10px 12px;
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.06);
    color: var(--text-primary);
}

.upload-input::file-selector-button {
    padding: 8px 12px;
    border-radius: 10px;
    border: none;
    background: rgba(124, 92, 252, 0.35);
    color: var(--text-primary);
    cursor: pointer;
}

.panel-results {
    background: var(--bg-panel-alt);
}

.results-box {
    background: rgba(4, 6, 18, 0.75);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: 24px;
}

.results-box h3 {
    font-size: 1.3rem;
    color: var(--accent-primary);
    margin: 28px 0 12px;
}

.results-box h3:first-child {
    margin-top: 0;
}

.results-box p {
    margin-bottom: 16px;
    color: var(--text-secondary);
}

.results-box ul,
.results-box ol {
    margin: 16px 0;
    padding-left: 24px;
    color: var(--text-secondary);
}

.results-box code {
    background: rgba(255, 255, 255, 0.08);
    padding: 2px 6px;
    border-radius: 6px;
    font-size: 0.85rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
}

.results-box strong {
    color: var(--text-primary);
}

.results-box pre {
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 16px;
    overflow-x: auto;
}

.tabbed-results {
    border: 1px solid rgba(255, 255, 255, 0.08);
}

.tab-container {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 16px;
}

.tab-button {
    padding: 10px 18px;
    border-radius: 999px;
    border: 1px solid transparent;
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s ease;
}

.tab-button.active {
    background: var(--aurora-gradient);
    color: #050312;
    box-shadow: var(--button-shadow);
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}

.tab-output {
    min-height: 160px;
    padding: 18px;
    border-radius: 16px;
    background: rgba(10, 12, 32, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--text-secondary);
}

.tab-output h3 {
    color: var(--accent-primary);
}

.tab-output pre,
.tab-output code {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
}

.dynamic-button {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-top: 8px;
    padding: 8px 14px;
    border-radius: 12px;
    border: 1px solid rgba(124, 92, 252, 0.35);
    background: rgba(124, 92, 252, 0.18);
    color: var(--text-primary);
    cursor: pointer;
    font-size: 0.85rem;
}

.dynamic-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 8px 18px rgba(124, 92, 252, 0.25);
}

.graph-meta {
    margin-top: 16px;
    padding: 16px;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
}

.graph-meta ul {
    margin: 8px 0 0;
    padding-left: 18px;
    color: var(--text-secondary);
}

.graph-meta__summary {
    margin-top: 10px;
    font-size: 0.9rem;
    color: var(--muted);
}

.modal-overlay {
    position: fixed;
    inset: 0;
    display: none;
    align-items: center;
    justify-content: center;
    background: rgba(2, 5, 20, 0.8);
    backdrop-filter: blur(8px);
    z-index: 1000;
}

.modal-overlay[hidden] {
    display: none;
}

.modal-overlay:not([hidden]) {
    display: flex;
}

.modal-content {
    width: min(90vw, 640px);
    padding: 28px;
    border-radius: 24px;
    background: rgba(6, 10, 25, 0.92);
    border: 1px solid rgba(148, 163, 255, 0.25);
    box-shadow: var(--panel-shadow);
    position: relative;
}

.modal-title {
    margin: 0 0 16px;
}

.modal-close {
    position: absolute;
    top: 16px;
    right: 16px;
    border: none;
    background: rgba(124, 92, 252, 0.25);
    width: 36px;
    height: 36px;
    border-radius: 50%;
    color: var(--text-primary);
    font-size: 1.2rem;
    cursor: pointer;
}

.modal-code-box {
    max-height: 320px;
    overflow: auto;
    padding: 16px;
    border-radius: 16px;
    background: rgba(4, 6, 18, 0.85);
    border: 1px solid rgba(124, 92, 252, 0.25);
    font-family: 'JetBrains Mono', monospace;
}

.modal-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 18px;
}

.modal-copy-button {
    padding: 10px 18px;
}

.tab-output svg {
    width: 100%;
    border-radius: 12px;
    background: rgba(0, 0, 0, 0.2);
}

#visualizer-output {
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

code {
    font-family: 'JetBrains Mono', monospace;
}

::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 999px;
}

@media (max-width: 768px) {
    .container {
        padding: 32px 24px;
        margin: 32px auto;
    }

    .top-nav {
        flex-direction: column;
        gap: 12px;
    }

    .button-row {
        flex-direction: column;
        align-items: stretch;
    }

    .cyber-button {
        width: 100%;
        text-align: center;
    }
}

/* Canvas Trail Effect Layer */
.canvas-effect-layer {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    opacity: 0.8;
}

/* Ensure content is above canvas */
.container {
    position: relative;
    z-index: 1;
}

.body-gradient,
.floating-shape {
    z-index: 0;
}

/* =============================================
   DESKTOP-OPTIMIZED OVERRIDES
   ============================================= */

/* Wider container for large screens */
@media (min-width: 1400px) {
    .container {
        width: min(1400px, 95%);
        padding: 56px 64px;
    }
}

@media (min-width: 1600px) {
    .container {
        width: min(1560px, 92%);
    }
}

/* Better hero section for desktop */
@media (min-width: 1024px) {
    .hero {
        padding: 20px 0 40px;
    }
    
    .hero-title {
        font-size: clamp(2.5rem, 3.5vw, 3.5rem);
        max-width: 700px;
    }
    
    .hero-subtitle {
        font-size: 1.1rem;
        max-width: 600px;
    }
}

/* Improved Live Editor Grid for Desktop */
@media (min-width: 1200px) {
    .live-editor-grid {
        grid-template-columns: minmax(0, 1.8fr) minmax(340px, 1fr);
        gap: 40px;
    }
    
    .editor-column .code-area {
        min-height: 420px;
    }
    
    #live-dashboard {
        position: sticky;
        top: 24px;
        max-height: calc(100vh - 48px);
        overflow-y: auto;
    }
}

/* Dashboard cards spacing */
@media (min-width: 1024px) {
    .dashboard-card {
        padding: 24px 28px;
    }
    
    .health-score-value {
        font-size: 4.5rem;
    }
    
    .stats-list {
        gap: 14px;
    }
    
    .stats-list li {
        font-size: 1rem;
        padding: 8px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }
    
    .stats-list li:last-child {
        border-bottom: none;
    }
}

/* Improved tabs for desktop */
@media (min-width: 1024px) {
    .tab-container {
        gap: 8px;
        padding-bottom: 16px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        margin-bottom: 24px;
    }
    
    .tab-button {
        padding: 12px 24px;
        font-size: 0.95rem;
    }
    
    .tab-output {
        min-height: 280px;
        padding: 24px;
    }
}

/* Better panel spacing */
@media (min-width: 1024px) {
    .panel {
        padding: 40px 48px;
    }
    
    .panel-title {
        font-size: 1.5rem;
    }
    
    .panel-subtitle {
        font-size: 1.05rem;
    }
}

/* Canvas effect - more subtle on desktop */
@media (min-width: 1024px) {
    .canvas-effect-layer {
        opacity: 0.6;
    }
}

/* Smoother scrolling */
html {
    scroll-behavior: smooth;
}

/* Better focus states */
.cyber-button:focus-visible,
.tab-button:focus-visible {
    outline: 2px solid var(--accent-secondary);
    outline-offset: 3px;
}

/* Improved code area on desktop */
@media (min-width: 1024px) {
    .code-area {
        font-size: 0.95rem;
        line-height: 1.7;
    }
    
    .trace-area {
        min-height: 100px;
    }
}

/* Complexity chart card */
.complexity-card canvas {
    max-height: 180px;
    margin-top: 12px;
}

/* Results box improvements */
@media (min-width: 1024px) {
    .results-box {
        padding: 32px;
    }
    
    .results-box pre {
        padding: 20px 24px;
        font-size: 0.9rem;
    }
}

/* Nav improvements for desktop */
@media (min-width: 1024px) {
    .top-nav {
        margin-bottom: 40px;
    }
    
    .brand-name {
        font-size: 1.1rem;
    }
    
    .nav-link {
        font-size: 1rem;
        padding: 10px 20px;
    }
}

/* Architect upload section */
@media (min-width: 1024px) {
    .architect-upload {
        margin-top: 36px;
        padding-top: 28px;
    }
    
    .upload-controls {
        gap: 16px;
    }
}

/* Animate dashboard cards on hover */
.dashboard-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.dashboard-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 24px 48px rgba(3, 0, 20, 0.65);
}

/* Health score color states */
#health-score.score-excellent {
    color: #4ade80;
}

#health-score.score-good {
    color: var(--accent-secondary);
}

#health-score.score-warning {
    color: #fbbf24;
}

#health-score.score-critical {
    color: #f87171;
}
